# =============================================================================
# FundifyHub - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update the values for your development environment
# This single file contains all environment variables used across the entire monorepo

# =============================================================================
# Database Configuration
# =============================================================================
# These settings work with Docker (pnpm infra:up) or manual PostgreSQL installation
DATABASE_URL="postgresql://user:pass@localhost:5432/fundifyhub"
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=fundifyhub

# =============================================================================
# Redis Configuration  
# =============================================================================
# These settings work with Docker (pnpm infra:up) or manual Redis installation
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL="redis://localhost:6379"

# RedisInsight - Redis Management UI (included with Docker setup)
REDIS_INSIGHT_PORT=5540

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# =============================================================================
# CORS Configuration
# =============================================================================
# Frontend URLs for CORS configuration
FRONTEND_URL="http://localhost:3000"
FRONTEND_URL_ALT="http://127.0.0.1:3000"
FRONTEND_PORT=3000

# =============================================================================
# OTP Configuration
# =============================================================================
# OTP Settings (Services configured via admin panel)
OTP_EXPIRES_IN_MINUTES=10
OTP_MAX_ATTEMPTS=3

# =============================================================================
# Service Configuration
# =============================================================================
# Optional Chromium path for PDF generation and WhatsApp services
CHROMIUM_PATH=

# =============================================================================
# Backend Services Configuration
# =============================================================================
# Main API Backend
API_PORT=3001
PORT=3001
API_HOST=localhost
API_URL="http://localhost:3001"

# WebSocket Server
WS_PORT=3002
WS_HOST=localhost
WS_URL="ws://localhost:3002"

# =============================================================================
# Frontend Configuration (Next.js Public Variables)
# =============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WS_URL="ws://localhost:3002"

# =============================================================================
# Authentication & Security
# =============================================================================
# Generate secure values for production!
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# =============================================================================
# Payment Gateway Configuration
# =============================================================================
# Get these from your Razorpay dashboard
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =============================================================================
# Email Configuration
# =============================================================================
# Configure for your email provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# Development/Debugging
# =============================================================================
DEBUG=fundifyhub:*