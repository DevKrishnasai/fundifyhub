{
  "name": "@fundifyhub/prisma",
  "version": "1.0.0",
  "description": "Shared Prisma database schema and client",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "prisma": {
    "seed": "npx dotenv -e ../../.env -- tsx prisma/seed.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "require": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "scripts": {
    "build": "prisma generate && tsc -b --force",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "db:generate": "npx dotenv -e ../../.env -- prisma generate",
    "db:push": "npx dotenv -e ../../.env -- prisma db push",
    "db:migrate": "npx dotenv -e ../../.env -- prisma migrate dev",
    "db:migrate:prod": "npx dotenv -e ../../.env -- prisma migrate deploy",
    "db:reset": "npx dotenv -e ../../.env -- prisma migrate reset --force",
    "db:seed": "npx dotenv -e ../../.env -- tsx prisma/seed.ts",
    "db:studio": "npx dotenv -e ../../.env -- prisma studio",
    "db:status": "npx dotenv -e ../../.env -- prisma migrate status"
  },
  "dependencies": {
    "@fundifyhub/logger": "workspace:*",
    "@fundifyhub/utils": "workspace:*",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.22.0"
  }
}